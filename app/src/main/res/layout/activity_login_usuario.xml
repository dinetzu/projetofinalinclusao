<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_loginusuario"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".LoginUsuarioActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abril_fatface"
        android:text="Login"
        android:textAlignment="center"
        android:textColor="#C5EEFF"
        android:textSize="100px" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cardo"
        android:text="CDGI ISERJ"
        android:textAlignment="center"
        android:textColor="#66FBF4"
        android:textSize="60px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edit_text_borda"
            android:textColorHint="#FFFFFF"
            app:boxStrokeWidth="0dp">

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/commissioner_light"
                android:gravity="left"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:textColorHint="#9797D8" />
        </com.google.android.material.textfield.TextInputLayout>
        <!-- Para fazer a borda do editSenha-->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edit_text_borda"
            android:textColorHint="#FFFFFF"
            app:boxStrokeWidth="0dp">

            <EditText
                android:id="@+id/editSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/commissioner_light"
                android:gravity="left"
                android:hint="Senha"
                android:inputType="textPassword"
                android:textColorHint="#9797D8" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnLogar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="#42BFB9"
        android:fontFamily="@font/aoboshi_one"
        android:gravity="center"
        android:text="Entrar"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnVoltarInicial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="#42BFB9"
        android:fontFamily="@font/aoboshi_one"
        android:gravity="center"
        android:text="Voltar ao Menu Principal"
        android:textColor="#FFFFFF" />

</LinearLayout>